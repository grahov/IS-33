<Window x:Class="IS_33.AddStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IS_33"
        mc:Ignorable="d"
        Title="AddStudentWindow" Height="250" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <TextBox
            Text="{Binding Name}"
            Margin="10"
            Grid.Row="0"
            >
        </TextBox>
        <TextBox
            Text="{Binding Course}"
            Margin="10"
            Grid.Row="1"
            >
        </TextBox>
        <Button
            Content="Сохранить"
            Margin="10"
            Grid.Row="2" Click="Button_Click"></Button>
    </Grid>
</Window>
